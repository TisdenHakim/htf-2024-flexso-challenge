<mvc:View
    controllerName="flexso.htf.frontend.frontend.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
>
    <ObjectPageLayout
        id="page"
        showFooter="true"
        upperCaseAnchorBar="false"
    >
        <headerTitle >
            <!-- <ObjectPageHeader id="_IDGenObjectPageHeader1" objectTitle="{name}" /> -->
            <ObjectPageDynamicHeaderTitle
                id="_IDGenObjectPageDynamicHeaderTitle1"
                 class="customDetailBackground"
            >
                <snappedContent>
                    <m:Title
                      
                        id="_IDGenTitle10"
                        text="{name} Galaxy"
                        wrapping="true"
                        class="wit"
                    />
                </snappedContent>
                <expandedHeading>
                    <m:Title
                       class="wit"
                        id="_IDGenTitle11"
                        text="{name}"
                        wrapping="true"
                    />
                </expandedHeading>
                <navigationActions>
                    <m:OverflowToolbarButton
                        id="_IDGenOverflowToolbarButton1"
                        type="Transparent"
                        icon="sap-icon://decline"
                        press="onCloseDetail"
                    />
                </navigationActions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <sections >
            <ObjectPageSection
            
                id="_IDGenObjectPageSection"
                titleUppercase="false"
                title="Information"
                showTitle="false"
            >
                <subSections>
                    <ObjectPageSubSection
                        id="_IDGenObjectPageSubSection"
                        mode="Expanded"
                        titleUppercase="false"
                    >
                        <blocks>
                            <form:Form
                                id="FormDisplay354"
                                editable="false"
                            >
                                <form:title>
                                    <core:Title
                                        id="_IDGenTitle1"
                                        text="{name}"
                                    />
                                </form:title>
                                <form:layout>
                                    <form:ResponsiveGridLayout
                                        id="_IDGenResponsiveGridLayout1"
                                        labelSpanXL="2"
                                        labelSpanL="2"
                                        labelSpanM="2"
                                        labelSpanS="12"
                                        adjustLabelSpan="false"
                                        emptySpanXL="2"
                                        emptySpanL="2"
                                        emptySpanM="2"
                                        emptySpanS="0"
                                        columnsXL="1"
                                        columnsL="1"
                                        columnsM="1"
                                        singleContainerFullSize="false"
                                    />
                                </form:layout>
                                <form:formContainers>
                                    <form:FormContainer
                                        id="_IDGenFormContainer1"
                                    >
                                        <form:formElements>
                                            <form:FormElement
                                                id="_IDGenFormElement2"
                                                label="Distance"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText1"
                                                        text="{distance}"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                            <form:FormElement
                                                id="_IDGenFormElement3"
                                                label="Amount of planets"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText"
                                                        text="{numberOfPlanets}"
                                                    />
                                                </form:fields>
                                            </form:FormElement>

                                            <form:FormElement
                                                id="_IDGenFormElement4"
                                                label="Common star type"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText4"
                                                        text="{mostCommonStarType/name}"
                                                    />
                                                </form:fields>
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText44"
                                                        text="{mostCommonStarType/description}"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                            <form:FormElement
                                                id="_IDGenFormElement5"
                                                label="Common planet type"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText5"
                                                        text="{mostCommonPlanetType/name}"
                                                    />
                                                </form:fields>
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText55"
                                                        text="{mostCommonPlanetType/description}"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                            <form:FormElement
                                                id="_IDGenFormElement6"
                                                label="Common alien type"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText6"
                                                        text="{mostLikelyAlienType/name}"
                                                    />
                                                </form:fields>
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText66"
                                                        text="{mostLikelyAlienType/description}"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                            <form:FormElement
                                                id="_IDGenFormElement7"
                                                label="Likelyhood of response"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText7"
                                                        text="{drakeEquation}%"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                        </form:formElements>
                                    </form:FormContainer>
                                </form:formContainers>
                            </form:Form>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                id="_IDGenObjectPageSection1"
                titleUppercase="false"
                title="Alien civilisation"
                class="wit"
            >
                <subSections>
                    <ObjectPageSubSection
                        id="_IDGenObjectPageSubSection1"
                        titleUppercase="false"
                    >
                        <blocks>
                            <form:Form
                                id="_IDGenForm"
                                editable="false"
                            >
                                <form:title>
                                    <core:Title
                                        id="_IDGenTitle"
                                        text="{AlienCivilisations/name}"
                                    />
                                </form:title>
                                <form:layout>
                                    <form:ResponsiveGridLayout
                                        id="_IDGenResponsiveGridLayout2"
                                        labelSpanXL="2"
                                        labelSpanL="2"
                                        labelSpanM="2"
                                        labelSpanS="12"
                                        adjustLabelSpan="false"
                                        emptySpanXL="2"
                                        emptySpanL="2"
                                        emptySpanM="2"
                                        emptySpanS="0"
                                        columnsXL="1"
                                        columnsL="1"
                                        columnsM="1"
                                        singleContainerFullSize="false"
                                    />
                                </form:layout>
                                <form:formContainers>
                                    <form:FormContainer
                                        id="_IDGenFormContainer2"
                                    >
                                        <form:formElements>
                                            <form:FormElement
                                                id="_IDGenFormElement"
                                                label="Report"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText3"
                                                        text="{explorationReport}"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                            <form:FormElement
                                                id="_IDGenFormElement8"
                                                label="Name"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        text="{AlienCivilisations/name}"
                                                        id="_IDGenText8"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                            <form:FormElement
                                                id="_IDGenFormElement10"
                                                label="Alien Type"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText9"
                                                        text="{AlienCivilisations/alienType/name}"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                            <form:FormElement
                                                id="_IDGenFormElement11"
                                                label="status"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText10"
                                                        text="{AlienCivilisations/status/name}"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                            <form:FormElement
                                                id="_IDGenFormElement12"
                                                label="contacted"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText11"
                                                        text="{AlienCivilisations/contacted}"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                            <form:FormElement
                                                id="_IDGenFormElement9"
                                                label="Message"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText2"
                                                        text="{AlienCivilisations/message}"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                            <form:FormElement
                                                id="_IDGenFormElement13"
                                                label="Decoded message"
                                            >
                                                <form:fields>
                                                    <m:Text
                                                        id="_IDGenText12"
                                                        text="{AlienCivilisations/decodedMessage}"
                                                    />
                                                </form:fields>
                                            </form:FormElement>
                                        </form:formElements>
                                    </form:FormContainer>
                                </form:formContainers>
                            </form:Form>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
        <footer>
            <m:OverflowToolbar id="_IDGenOverflowToolbar1">
                <m:ToolbarSpacer id="_IDGenToolbarSpacer1" />

                <m:Button
                    id="_IDGenButton2"
                    type="Emphasized"
                    text="Send Communication Request"
                    press="sendRequest"
                    visible="{
                            path: 'explorationReport',
                            targetType: 'any',
                            formatter: '.formatter.formatCommunicationButton'
                        }"
                />
                <m:MenuButton
                    id="_IDGenMenuButton"
                    text="Decipher Message"
                    visible="{
                            path: 'AlienCivilisations/message',
                            targetType: 'any',
                            formatter: '.formatter.formatDecipherButton'
                        }"
                >
                    <m:menu>
                        <m:Menu
                            id="_IDGenMenu"
                            itemSelected="decipherMessage"
                        >
                            <m:MenuItem
                                id="_IDGenMenuItem1"
                                text="Ceasar"
                                icon="sap-icon://meal"
                            />
                            <m:MenuItem
                                id="_IDGenMenuItem2"
                                text="Binary"
                                icon="sap-icon://bar-code"
                            />
                            <m:MenuItem
                                id="_IDGenMenuItem3"
                                text="Morse code"
                                icon="sap-icon://command-line-interfaces"
                            />
                        </m:Menu>
                    </m:menu>
                </m:MenuButton>
            </m:OverflowToolbar>
        </footer>
    </ObjectPageLayout>
</mvc:View>
